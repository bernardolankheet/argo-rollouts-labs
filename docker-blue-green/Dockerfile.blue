# Usar Nginx Alpine como base
FROM nginx:alpine

# Copiar arquivo HTML personalizado
COPY index-blue.html /usr/share/nginx/html/index.html

# Criar arquivo de versão para health checks
RUN echo "blue-v1.0" > /usr/share/nginx/html/version.txt

# Copiar configuração customizada do nginx
COPY nginx-blue.conf /etc/nginx/conf.d/default.conf

# Expor porta 80
EXPOSE 80

# Comando padrão
CMD ["nginx", "-g", "daemon off;"]